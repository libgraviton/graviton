{
  "id": "ExternalLinks",
  "description": "A service containing external links",
  "service": {
    "readOnly": false,
    "routerBase": "/core/external-link/",
    "fixtures": []
  },
  "target": {
    "indexes": ["group"],
    "relations": [],
    "fields": [
      {
        "name": "id",
        "type": "varchar",
        "title": "ID",
        "description": "Unique identifier of an external link"
      },
      {
        "name": "name",
        "type": "varchar",
        "title": "Name",
        "description": "Name of the external link",
        "translatable": true
      },
      {
        "name": "url",
        "type": "varchar",
        "title": "URL",
        "description": "The URL",
        "constraints": [
          {
            "name": "Url",
            "options": [{"name": "message", "value":"The url '{{ value }}' is not a valid url"}]
          }
        ]
      },
      {
        "name": "translatedUrl",
        "type": "varchar",
        "title": "TranslatedUrl",
        "description": "An object containing the translated links",
        "translatable": true
      },
      {
        "name": "order",
        "type": "int",
        "title": "Order",
        "description": "The order index"
      },
      {
        "name": "group",
        "type": "varchar",
        "title": "Group",
        "description": "A field to build groups of links."
      },
      {
        "name": "categories.0.ref",
        "type": "extref",
        "title": "Categories",
        "description": "Links to categories",
        "exposeAs": "$ref",
        "collection": ["*"]
      },
      {
        "name": "permissions",
        "type": "array",
        "title": "Permissions",
        "description": "Permissions for links",
        "required": false
      }
    ]
  }
}
