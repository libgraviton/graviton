{
  "id": "Module",
  "description": "A service containing modules that relate to apps",
  "service": {
    "readOnly": false,
    "routerBase": "/core/module/",
    "fixtures": [
      {
        "key": "realEstate",
        "app": {
            "ref": {
                "$id": "tablet",
                "$ref": "App"
            }
        },
        "name": {
          "en": "Real Estate"
        },
        "path": "/module/realestate",
        "order": 1
      },
      {
        "key": "investment",
        "app": {
            "ref": {
                "$id": "tablet",
                "$ref": "App"
            }
        },
        "name": {
          "en": "Investment"
        },
        "path": "/module/investment",
        "order": 2
      },
      {
        "key": "retirement",
        "app": {
            "ref": {
                "$id": "tablet",
                "$ref": "App"
            }
        },
        "name": {
          "en": "Retirement"
        },
        "path": "/module/retirement",
        "order": 3
      },
      {
        "key": "requisition",
        "app": {
            "ref": {
                "$id": "tablet",
                "$ref": "App"
            }
        },
        "name": {
          "en": "Requisition"
        },
        "path": "/module/requisition",
        "order": 4
      },
      {
        "key": "payAndSave",
        "app": {
            "ref": {
                "$id": "tablet",
                "$ref": "App"
            }
        },
        "name": {
          "en": "Pay & Save"
        },
        "path": "/module/payandsave",
        "order": 5
      }
    ]
  },
  "target": {
    "indexes": [],
    "relations": [
      {
        "type": "embed",
        "collectionName": "ModuleApp",
        "localProperty": "app",
        "localValueField": "app",
        "path": "/core/app/"
      }
    ],
    "fields": [
      {
        "name": "id",
        "type": "varchar",
        "title": "ID",
        "description": "Unique identifier for an item."
      },
      {
        "name": "key",
        "type": "varchar",
        "title": "Key",
        "description": "A fixed string identifying this module.",
        "required": true
      },
      {
        "name": "app",
        "type": "class:GravitonDyn\\ModuleAppBundle\\Document\\ModuleApp",
        "required": true
      },
      {
        "name": "name",
        "type": "varchar",
        "title": "Name",
        "description": "Name of this module",
        "required": true,
        "translatable": true
      },
      {
        "name": "path",
        "type": "varchar",
        "title": "Path",
        "description": "A path this module points to."
      },
      {
        "name": "order",
        "type": "int",
        "title": "Order",
        "description": "Integer for sort order"
      }
    ]
  }
}
